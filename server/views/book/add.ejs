<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Item</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Item"
                    name="Item" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Cost</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Cost for 1 of the item"
                    name="Cost" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Quantity</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the total quantity"
                    name="Quantity" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Total</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the Total price"
                    name="Total" required></textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/bookslist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

